---
import { Image } from "astro:assets";
import Container from "../shared/Container.astro";
import Paragraph from "../shared/Paragraph.astro";
import Title from "../shared/Title.astro";

import myImage from "../../assets/images/dev-with-c-1.webp";
import GradiantText from "../shared/GradiantText.astro";

type FeatureProps = {
  title: string;
  description: string;
};
const features = [
  {
    title: "CISO as a Service",
    description:
      "Dirección de ciberseguridad fraccional: estrategia, gobierno, métricas y roadmap sin contratar un CISO full-time.",
  },
  {
    title: "SGSI ISO/IEC 27001:2022",
    description:
      "Implementación de SGSI con alcance, análisis de riesgos, controles del Anexo A, SoA y métricas (ISO 27004).",
  },
  {
    title: "Auditoría 27001 + 22301",
    description:
      "Auditoría interna integrada de seguridad y calidad, hallazgos priorizados y plan de acciones correctivas.",
  },
  // {
  //   title: "NIST CSF 2.0: Gap & Roadmap",
  //   description:
  //     "Diagnóstico de madurez (Govern, Identify, Protect, Detect, Respond, Recover) y hoja de ruta por impacto/riesgo.",
  // },
  {
    title: "BIA & Continuidad (ISO 22301)",
    description:
      "Análisis de impacto al negocio, definición de RTO/RPO, estrategias BCP/DRP y ejercicios de continuidad.",
  },
  {
    title: "Cumplimiento Ley 21.663 (Chile)",
    description:
      "Alineamiento regulatorio para OIV: roles, notificación de incidentes, controles mínimos y evidencias.",
  },
  //{
  //  title: "GRC Dashboards (Power BI)",
  //  description:
  //    "KPIs/KRIs y tableros ejecutivos con modelo de datos claro para riesgos, controles, auditorías e incidentes.",
  //},
  {
    title: "Gestión de Riesgos de Información",
    description:
      "Metodologías ISO 27005/ISO 31000: identificación, valoración, tratamiento y seguimiento del riesgo.",
  },
  {
    title: "Seguridad en la Nube (ISO 27017/27018)",
    description:
      "Controles para servicios cloud y protección de PII en la nube, gobierno y configuración segura.",
  },
  {
    title: "Gestión de Proveedores y Terceros",
    description:
      "Evaluación, contratos y monitoreo continuo del riesgo en la cadena de suministro y servicios externos.",
  },
  // {
  //title: "Respuesta a Incidentes",
  //description:
   // "Procedimientos, CSIRT interno, coordinación y lecciones aprendidas para reducir impacto y tiempos de respuesta.",
  //},
  {
    title: "Formación y Concientización",
    description:
      "Capacitación ejecutiva y técnica, campañas de awareness y medición de adopción para fortalecer la cultura.",
  },
];

export interface Props {
  className?: string;
}

const { className } = Astro.props;
---

<section id="features" class=`${className}`>
  <Container className="">
    <div class="text-center max-w-3xl mx-auto">
      <Title>
        Ejecución ágil y evidencias sólidas para <GradiantText>resultados<br />medibles</GradiantText>
      </Title>
      <Paragraph className="mt-4">
        <b>Servicios clave en Seguridad de la Información, Continuidad y Ciberseguridad</b> que impulsan tu negocio.
      </Paragraph>
    </div>
    <div class="flex flex-row flex-wrap mt-8">
      <!-- <div class="flex flex-col lg:gap-10 lg:gap-12 midmd:flex-row mt-8"> -->
      <!-- <div class="flex  lg:w-1/2 flex-row"> -->
      {
        features.map((feature: FeatureProps) => {
          return (
            <div class="flex items-center text-heading-3 font-medium basis-full md:basis-1/2 lg:basis-1/3">
              <span class="font-bold rounded-full w-8 h-8 mr-3 text-primary inline-flex justify-center items-center">
                &checkmark;
              </span>
              {feature.title}
            </div>
          );
        })
      }
      <!-- </div> -->
    </div>
  </Container>
</section>
